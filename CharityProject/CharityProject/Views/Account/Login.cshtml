@model CharityProject.Models.LoginViewModel        

<!-- SignIn START -->
        <div class="sign mt-4 mt-sm-3 mt-lg-0">
            <div class="sign__layer">
                <div class="container-fluid p-0">
                    <div class="d-md-flex justify-content-between position-relative h-100">
                        <div class="col-11 col-sm-10 col-md-8 col-lg-5 col-xl-4 m-auto sign__position">
                            <div class="sign__form">
                                <h5 class="sign__small d-none d-lg-block">Copyright © 2023 Company Name</h5>
                                <form method="POST" class="">
                                    <h4 class="sign__form-heading">Sign In</h4>
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>​
                                    <div class="">
                                        <div class="sign__form-mb">
                                            <label class="sign__form-label" for="emailInp" id="email">Email <span
                                                    class="text-danger">*</span></label>
                                            <input class="form-control sign__form-input" id="emailInp" type="email"
                                                placeholder="Enter your email" asp-for="Email">
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                        <div class="">
                                            <label class="sign__form-label" for="passwordInp">Password <span
                                                    class="text-danger">*</span></label>
                                            <input class="form-control sign__form-input" id="passwordInp"
                                                type="password" placeholder="Create a Password" asp-for="Password">
                                                <span class="text-danger" asp-validation-for="Password"></span>
                                        </div>
                                        <div class="d-flex justify-content-between align-items-center mt-3 mb-4">
                                            <label class="sign__form-rem">
                                                <input type="checkbox" id="checkbox" name="rememberMe" asp-for="RememberMe">
                                                <span class="sign__form-rem--checkmark sign__text"></span>
                                                Remember for 30 days
                                            </label>
                                        </div>
                                        <div class="col-10 col-sm-12 m-auto">
                                            <div class="">
                                                <input class="sign__btn sign__btn-in form-control" type="submit"
                                                    value="log in">
                                            </div>
                                            <br/>
                                        </div>
                                        <div class="">
                                            <p class="sign__text text-center">Don’t have an account? <a
                                                    class="sign__form-link" asp-controller="Account" asp-action="Register">Sign up</a></p>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="">
                                <img class="sign__card-element d-none d-xxl-block" src="~/assets/img/element-5.png"
                                    alt="image">
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 d-none d-lg-block">
                            <div class="sign__slider">
                                <div class="sign__slider-item">
                                    <div class="card sign__card h-100">
                                        <img class="img-fluid h-100 sign__card-img" src="~/assets/img/signIn1.png"
                                            alt="image">
                                        <div class="card-img-overlay sign__card-overlay">
                                            <div class="position-relative">
                                                <h5 class="global__heading global__heading-w sign__card-title">Sign in
                                                    to
                                                    save
                                                    and
                                                    continue
                                                </h5>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- SignIn END -->